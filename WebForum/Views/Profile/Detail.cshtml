@using Microsoft.AspNetCore.Identity
@model WebForum.Models.Profile.ProfileModel
@inject UserManager<WebForum.Data.Models.ApplicationUser> UserManager

<div class="container">
    <div class="row">
        <div>
            <h3>@Model.Username's Profile</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2 col-12 pl-0">
            <div class="profileImage" style="background-image: url(@Model.ProfileImageUrl);"></div>
            @if (User.Identity.Name == Model.Username)
            {
                <form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="UploadProfileImage" class="mb-3">
                    <div id="upload" class="mt-2">
                        <label class="btn btn-primary btn-file m-0 btn-sm">
                            Browse <input type="file" name="file" style="display: none;" />
                        </label>
                        <button type="submit" class="btn btn-primary btn-sm float-right">Submit</button>
                    </div>
                </form>
            }
        </div>
        <div class="col-md-10 col-12 userProfileInfo">
            @if (@Model.IsAdmin)
            {
                <p class="text-danger">Admin</p>
            }
            <p>Username: <span class="text-danger">@Model.Username</span></p>
            <p>Current rating: <span class="text-danger">@Model.UserRating</span></p>
            <p>Email address: <span class="text-danger">@Model.Email</span></p>
            <p>Member since: <span class="text-danger">@Model.MemberSince</span></p>
        </div>
    </div>
</div>
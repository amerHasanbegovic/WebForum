@model WebForum.Models.Reply.PostReplyModel

<div class="container">
    <div class="row">
        <a asp-controller="Post" asp-action="Index" asp-route-id="@Model.PostId">
            <span class="btn btn-outline-dark">
                Back to post
            </span>
        </a>
    </div>

    <div class="row mt-3">
        <div class="postReply">
            <h3>@Model.PostTitle | <a asp-controller="Post" asp-action="Index" asp-route-id="@Model.ForumId">@Model.ForumName</a></h3>
            <p>@Model.PostContent</p>
        </div>
    </div>
    <hr />

    <div class="row">
        <div id="createReply">
            <form asp-action="AddReply" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ReplyContent">Reply: </label>
                    <textarea asp-for="ReplyContent" rows="4" cols="100" class="form-control" placeholder="Your reply.."></textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <button type="submit" id="submitReplyBtn" class="btn btn-primary">Submit Reply</button>
                <input asp-for="AuthorId" type="hidden" />
                <input asp-for="PostId" type="hidden" />
                <input asp-for="ForumId" type="hidden" />
            </form>
        </div>
    </div>
</div> 
@model WebForum.Models.Forum.NewForumModel

<h3 class="d-block">Create New Forum</h3>
<form asp-action="AddNewForum" method="post" id="createNewForum" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title"><small>Forum Title</small></label>
        <input asp-for="Title" class="form-control" placeholder="Enter forum title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"><small>Forum Description</small></label>
        <input asp-for="Description" class="form-control" placeholder="Short description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div id="upload">
        <label class="btn btn-primary btn-sm btn-file">Browse <input asp-for="ImageUpload" typeof="file" style="display: none;" /></label>
        <span><small>Choose Forum Image</small></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary btn-sm">Create Forum</button>
</form>

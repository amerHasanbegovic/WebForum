@model WebForum.Models.Forum.ForumTopicModel

<h1>Welcome to the @Model.Forum.Title Forum!</h1>
<br />
<span id="headingBtn">
    <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id" class="btn btn-primary btn-newPost">Create post</a>
</span>
<hr />

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                            @post.Title
                        </a>
                    </td>
                    <td>@post.AuthorName</td>
                    <td>@post.DatePosted</td>
                    <td>@post.RepliesCount</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="noPosts">
        <h5>There are no posts in this forum yet..</h5>
        <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
            Create one?
        </a>
    </div>
}
@model WebForum.Models.Post.PostIndexModel

<h2>@Model.Title</h2>

<div>
    <small>
        Author: @Model.AuthorName (@Model.AuthorRating) | @Model.Created
    </small>
</div>
<div>
    <p style="font-family: 'Roboto', serif" class="pt-3 pb-1 border-bottom">@Model.PostContent</p>
</div>

@if (Model.Replies.Any())
{
    foreach (var reply in Model.Replies)
    {
        <div class="pt-3 pb-1 border-bottom">
            <div>
                <p>Re: <span>@reply.ReplyContent</span></p>
            </div>
            <div>
                <span><small>@reply.AuthorName | @reply.DateTime</small></span>
            </div>
        </div>
    }
}